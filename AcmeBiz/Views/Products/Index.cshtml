
@using Northwind.ViewModel;
@using AcmeBiz.ViewModel;
@using  System;
@using System.Collections.Generic;

@model NorthwindProductListViewModel

@{
    ViewBag.Title = "Products";
}
<article>
    <header>
        <h2>@ViewBag.Title</h2>
    </header>

    <div class="row">
        <aside class="col-sm-3">
            @Html.Partial("_CategoryList", Model.NorthwindCategoryList)


        </aside>
        <section class="col-sm-9">
            @Html.Partial("_ProductList", Model.NorthwindProductList)
        </section>

    </div>

</article>


